apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization

resources:
  - namespace.yaml
  - github.com/argoproj/argo-cd/manifests/cluster-install?ref=v2.11.4
  - argocd-secret-role.yaml
  - argocd-secret-rolebinding.yaml
  - cmp-plugin.yaml

patches:
  - path: argocd-repo-server.yaml
