apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: argo
  namespace: argo-system
spec:
  parentRefs:
    - name: external
      namespace: kube-system
  hostnames: ["argo.#{ cloudflare_domain }#"]
  rules:
    - matches:
        - path:
            type: PathPrefix
            value: /
      backendRefs:
        - name: argocd-server
          port: 80
