apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: argo
  namespace: argo-system
spec:
  parentRefs:
    - name: external
      namespace: kube-system
      sectionName: https
  hostnames: ["argo.#{ cloudflare_domain }#"]
  rules:
    - backendRefs:
        - name: argocd-server
          port: 80
