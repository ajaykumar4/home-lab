---
apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: "#{ cloudflare_domain.replace('.', '-') }#-production"
spec:
  secretName: "#{ cloudflare_domain.replace('.', '-') }#-production-tls"
  issuerRef:
    name: letsencrypt-production
    kind: ClusterIssuer
  commonName: "#{ cloudflare_domain }#"
  dnsNames: ["#{ cloudflare_domain }#", "*.#{ cloudflare_domain }#"]


